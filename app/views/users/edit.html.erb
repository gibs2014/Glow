<div class="page-header">
  <h1>Editing User #<%= @user.id %></h1>
</div>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <%end%>
<%end%>


<%= form_tag(user_url(@user), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, @user.first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :second_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :second_name, @user.second_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :date_of_birth, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :date_of_birth, @user.date_of_birth, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :email_address, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email_address, @user.email_address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :password, @user.password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :size, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :size, @user.size, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :body_shape, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :body_shape, @user.body_shape, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update User", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
