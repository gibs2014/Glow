<div class="page-header">
  <h1>Editing Order Item #<%= @order_item.id %></h1>
</div>

<% if @order_item.errors.any? %>
  <% @order_item.errors.full_messages.each do |message| %>
          <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <%end%>
<%end%>

<%= form_tag(order_item_url(@order_item), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :order_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :order_id, @order_item.order_id, class: 'form-control' %>!>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_id, @order_item.item_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :purchased, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= check_box_tag :purchased, 1, @order_item.purchased? %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Order Item", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
